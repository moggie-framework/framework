{
  "name": "@voyage/workspace",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "format": "npx prettier --write '{packages,scripts,examples}/**/*.{js,ts}' && cd packages/framework-native && cargo fmt",
    "test": "npm --workspaces test --experimental-test-coverage",
    "test:direct": "node --test --experimental-test-coverage --enable-source-maps --import @voyage/runtime",
    "test:e2e": "node test {path}",
    "rust:check": "cd packages/framework-native && cargo check"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.3.3"
  }
}
